<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_blue" 
    android:orientation="vertical" >
     
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
    	android:layout_marginTop="40dp"        
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:textColor="#FFFFFF"/>

	<ImageView
		android:id="@+id/imageViewLogo"
		android:layout_width="15dip"
		android:layout_height="20dip"
		android:layout_gravity="center_horizontal"
		android:scaleType="fitCenter"
		android:background="#000000FF"
		android:src="@drawable/logo_finger" />
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"	    
     	android:background="@drawable/content_bg"
     	android:paddingBottom="20dp"
     	android:paddingTop="20dp"
     	android:paddingLeft="20dp"     	     	
     	android:paddingRight="20dp"     	
	    android:orientation="vertical" >
	
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >
	
	        <ImageView
		        android:id="@+id/imageViewHeaderPhoto"
		        android:layout_width="150dip"
		        android:layout_height="200dip"
		        android:scaleType="fitCenter"
		        android:src="@drawable/def_head" />
	
	        <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginLeft="10dp"
			    android:orientation="vertical" >

	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	            		        			
	            <EditText
	                android:id="@+id/txtStudentID"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:hint="@string/StudentID"
	                android:imeOptions="actionNext"
	                android:numeric="integer"
	                android:singleLine="true" />
	</TableRow>	            
	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	           
		            <EditText
	                android:id="@+id/txtPassword"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:hint="@string/Password"
	                android:imeOptions="actionDone"
	                android:inputType="textVisiblePassword"
	                android:singleLine="true" />
	</TableRow>	            
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content" 
			        android:background="@drawable/spinner_ssid_bg"
			        android:layout_marginBottom="5dp"				        		
					android:orientation="horizontal">
			        <Spinner
			            android:id="@+id/spinnerSSID"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:textColor="#FFFFFF"
			        	android:background="#00000000"
			            android:layout_weight="0.1"
			            android:paddingLeft="15dp"
						android:textSize="30dp">
			
			        </Spinner>
			
				    <ImageView
				        android:id="@+id/imageViewSpinnerDown"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_gravity="center_horizontal"
				        android:layout_weight="1"
			        	android:paddingRight="10dp"				        
				        android:scaleType="fitCenter"
				        android:src="@drawable/spinner_ssid_down" />
			
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent" 
			        android:layout_marginBottom="5dp"			        		
					android:orientation="horizontal">
		
					<CheckBox
					    android:id="@+id/checkBoxOffline"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:textColor="#FFFFFF"
					    android:layout_weight="0.5"
					    android:layout_marginTop="3dp"				    
					    android:text="@string/LoginOffline"
					    android:textSize="24dp"
					    android:textAppearance="?android:attr/textAppearanceLarge" />
					
					<Button
					    android:id="@+id/btnLogin"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_gravity="right"	
					    android:layout_weight="0.6"
					    android:background="@drawable/button_login"
					    android:text="@string/Login"
					    android:textColor="#FFFFFF"
					    android:textSize="24dp" />						    
				</LinearLayout>
	    	</LinearLayout>
		</LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/baseinfo_frame_bg"
		    android:orientation="vertical" >		
			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"		    			    
			    android:paddingLeft="15dp"			    		    
			    android:text="@string/BaseInfo"
			    android:textColor="#FFFFFF"
			    android:textAppearance="?android:attr/textAppearanceLarge"/>
	
			<ScrollView
	    	    android:id="@+id/scrollViewBaseInfo"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent"
				android:background="@drawable/baseinfo_bg"	    	     
			    android:paddingBottom="5dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="10dp">
	

		        <TextView
		            android:id="@+id/textViewBaseInfo"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
			    	android:paddingLeft="5dp"
		            android:minLines="6"
		            android:textColor="#FFFFFF"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
	
		    </ScrollView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"	    
	    android:orientation="vertical" >
	
		<View
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.6"		
	        android:layout_gravity="center_horizontal"/>
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		
	        android:layout_gravity="center_horizontal|bottom"	        			    
		    android:layout_weight="0.1"					    		    
		    android:text="@string/CompanyName"
		    android:textColor="#FFFFFF"
		    android:textAppearance="?android:attr/textAppearanceLarge"/>
	</LinearLayout>
</LinearLayout>