<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:orientation="horizontal" >
     
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_marginRight="35dp"
	        android:paddingTop="10dp"
	        android:text="@string/app_name"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#B00BCC" />

	</LinearLayout>
	
    <ImageView
        android:id="@+id/imageViewHeaderPhoto"
        android:layout_width="90dip"
        android:layout_height="120dip"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/def_head" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/txtStudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/StudentID"
                android:imeOptions="actionNext"
                android:numeric="integer"
                android:singleLine="true" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/Password"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:singleLine="true" />

        </TableRow>

        <Spinner
            android:id="@+id/spinnerSSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bak"
            android:paddingLeft="30dp" >

        </Spinner>
    </TableLayout>
	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal">

		<LinearLayout
		    android:id="@+id/linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
			
			<CheckBox
				android:id="@+id/checkBoxOffline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:textColor="#000000"				
				android:text="@string/LoginOffline" 
				android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/item"
			    android:paddingLeft="35dp"
			    android:text="@string/BaseInfo"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textColor="#000000" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/linearLayout1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.1"			 
			android:orientation="vertical">

			<Button
			    android:id="@+id/btnLogin"
			    android:layout_width="160dip"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:background="@drawable/green_button_bak"
			    android:text="@string/Login"
			    android:textSize="26dp" />

			<Button
			    android:id="@+id/btnExit"
			    android:layout_width="160dip"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:background="@drawable/green_button_bak"
			    android:text="@string/Exit"
			    android:textSize="26dp" />
			
		</LinearLayout>
	</LinearLayout>
	<ScrollView
        android:id="@+id/scrollViewBaseInfo"
        android:layout_width="match_parent"           
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textViewBaseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </ScrollView>

</LinearLayout>