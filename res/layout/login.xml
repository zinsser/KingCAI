<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper13"
    android:orientation="vertical" >
     
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="10dp"
	        android:text="@string/app_name"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="40dp" 
	        android:textColor="#B00BCC" />
	
    <ImageView
        android:id="@+id/imageViewHeaderPhoto"
        android:layout_width="150dip"
        android:layout_height="200dip"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/def_head" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/txtStudentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/StudentID"
                android:imeOptions="actionNext"
                android:numeric="integer"
                android:singleLine="true" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/Password"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:singleLine="true" />

        </TableRow>

        <Spinner
            android:id="@+id/spinnerSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bak"
            android:paddingLeft="30dp" >

        </Spinner>
    </TableLayout>
	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal">

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.4"
		    android:orientation="vertical" >
			
			<CheckBox
				android:id="@+id/checkBoxOffline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:textColor="#000000"				
				android:text="@string/LoginOffline" 
				android:textAppearance="?android:attr/textAppearanceLarge" />
		    <TextView
			    android:layout_width="match_parent"
			    android:layout_height="5dp"/>
			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="35dp"
		        android:background="@drawable/item"			    
			    android:text="@string/BaseInfo"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textColor="#000000"/>
								</LinearLayout>

		<LinearLayout
		    android:id="@+id/linearLayout1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.8"		   
		    android:orientation="vertical" >


		    
			<Button
			    android:id="@+id/btnLogin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:background="@drawable/green_button_bak"
			    android:text="@string/Login"
			    android:textSize="24dp" />

		    <TextView
			    android:layout_width="match_parent"
			    android:layout_height="5dp"/>
			
			<Button
			    android:id="@+id/btnExit"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:background="@drawable/green_button_bak"
			    android:text="@string/Exit"
			    android:textSize="24dp" />
			
		</LinearLayout>
	</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#DDDDDD" />	

    	<ScrollView
        android:id="@+id/scrollViewBaseInfo"
        android:layout_width="match_parent"           
        android:layout_height="match_parent" 
    		android:background="@drawable/frame_gallery_preview_album_selected"        >

        <TextView
            android:id="@+id/textViewBaseInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </ScrollView>

</LinearLayout>