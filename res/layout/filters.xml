<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:longClickable="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtQuestionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"	        
        android:paddingLeft="5dip"
        android:paddingTop="3dip"
   		android:background="@drawable/question_detail_bg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"/>
	<LinearLayout 
	    android:id="@+id/linearLayoutImage" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"   
    	android:background="#DCDCDC"
	   	android:layout_gravity="center"     	
    	android:layout_marginLeft="10dip"    
	    android:orientation="horizontal" >
		<LinearLayout 
		    android:id="@+id/linearLayoutImage_1" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"    
	    	android:background="#DCDCDC"  	    	  
		    android:orientation="vertical" >
		    <ImageView
	            android:id="@+id/imageView_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="2dp"
	    		android:layout_gravity="center" 
				android:scaleType="fitCenter"		    		    
	            android:src="@drawable/image_loading_holder"/>	    
		    <TextView
		        android:id="@+id/textViewTip_Grap1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"	                
		        android:text="Grap.1"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/linearLayoutImage_2"		    
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"    
	    	android:background="#DCDCDC"    
		    android:orientation="vertical" >
			<ImageView
	            android:id="@+id/imageView_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    		android:layout_gravity="center" 
				android:scaleType="fitCenter"		    
	            android:src="@drawable/image_loading_holder"/>	
		    <TextView
		        android:id="@+id/textViewTip_Grap2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
		        android:text="Grap.2"/> 
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
        android:id="@+id/linearLayoutAnswerAera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:background="#DCDCDC"            
        android:orientation="horizontal" > 

	    <LinearLayout
            android:id="@+id/linearLayoutOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:background="#DCDCDC"	            
            android:orientation="horizontal" >          

            <RadioButton
                android:id="@+id/radioBtnA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingRight="10dp"
                android:text="A"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radioBtnB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="10dip"
                android:paddingRight="10dp"	                
                android:text="B" />
            <RadioButton
                android:id="@+id/radioBtnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:textColor="#000000"   
                android:layout_marginLeft="10dip"
                android:paddingRight="10dp"	     
                android:text="C" />

            <RadioButton
                android:id="@+id/radioBtnD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:textColor="#000000"   
                android:layout_marginLeft="10dip"
                android:paddingRight="10dp"	     
                android:text="D" />
	    </LinearLayout>
	    <LinearLayout
            android:id="@+id/linearLayoutBlanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:background="#DCDCDC"
            android:layout_marginLeft="15dp"
            android:paddingTop="5dip"	    			            
            android:orientation="vertical" > 

	        <EditText
	            android:id="@+id/editTextAnswer"
	            android:layout_width="262dp"
	            android:layout_height="wrap_content"
	            android:maxLines="3"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="#000000" />

	    </LinearLayout>
	    <LinearLayout
            android:id="@+id/linearLayoutOtherInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:background="#DCDCDC"	            
            android:orientation="horizontal" >    	            
	        <ImageView
	            android:id="@+id/imageViewMarker"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    		android:layout_gravity="center" 
				android:scaleType="fitCenter"	
				android:layout_marginTop="5dip"	    		    
	    		android:layout_marginLeft="5dip"           
	            android:src="@drawable/unmark_icon" />

	        <RatingBar
	            android:id="@+id/ratingBarHardness"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
				android:layout_marginLeft="20dip" 	            
 				style="?android:attr/ratingBarStyleIndicator"
 				android:numStars="3"/> 
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>