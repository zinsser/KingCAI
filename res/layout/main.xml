<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/btnCommit"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/btn_style_two_normal"
            android:text="@string/Commit"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:layout_gravity="center_vertical"         
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtGoto"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:imeOptions="actionDone"
            android:numeric="integer"
            android:layout_gravity="center_vertical"             
            android:singleLine="true" >
        </EditText>
        
        <TextView
            android:id="@+id/txtAnswerInfo"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingLeft="20dip"
            android:text="0/0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/btn_style_two_normal"
            android:text="@string/AllQuestions" />

    </TableRow>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD" />

    <ListView
        android:id="@+id/lstQuestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.72"
		android:divider="#DDDDDD"
        android:dividerHeight="2dip">

    </ListView>

    <TableRow
        android:id="@+id/tableInput"
        android:paddingTop="5dip"         
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtCurrent"
            android:layout_width="98dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            android:text="Option"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/txtOption"
            android:layout_width="402dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.95"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:textColor="#000000"
            android:textSize="20dip" >
        </EditText>

        <Button
            android:id="@+id/btnUP"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.06"
            android:background="@drawable/numberpicker_up_focused_holo_light" />

    </TableRow>

    <TableRow
        android:id="@+id/tableReference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtAnswer"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:layout_gravity="center_vertical"            
            android:text="@string/RefAnswer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtReference"
            android:layout_width="400dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.95"
            android:background="@drawable/reference_bk"
            android:textColor="#0000FF"
            android:textSize="20dip" >
        </TextView>

        <Button
            android:id="@+id/btnDown"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.06"
            android:background="@drawable/numberpicker_down_focused_holo_light" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/listDivider" />

</LinearLayout>