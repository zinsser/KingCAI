<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/questionitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="horizontal" >
    	<!--     android:background="#ECECEC" -->
	<LinearLayout 
	    android:id="@+id/linearLayoutTextInfo" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
    	android:background="#DCDCDC"  
	    android:layout_weight="0.1"    	
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/txtQuestionDetail"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="0.999"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"	        
	        android:paddingLeft="5dip"
	        android:paddingTop="3dip"
    		android:background="@drawable/buddy_head_frame"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#000000"/>
	    <LinearLayout
	        android:id="@+id/linearLayoutAnswerAera"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:background="#DCDCDC"	            
	        android:orientation="horizontal" > 
		    <LinearLayout
	            android:id="@+id/linearLayoutBlanks"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    		android:background="#DCDCDC"	            
	            android:orientation="vertical" > 
			    <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		    		android:background="#DCDCDC"	            
		            android:orientation="horizontal" >          
			
			        <EditText
			            android:id="@+id/txtAnswer"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"          
			            android:text="@string/RefAnswer"
			            android:textAppearance="?android:attr/textAppearanceMedium"
			            android:textColor="#000000" />	 
			                       
			    </LinearLayout>
			    <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		    		android:background="#DCDCDC"	            
		            android:orientation="horizontal" >          
			
			        <EditText
			            android:id="@+id/txtAnswer"
			            android:layout_width="100dip"
			            android:layout_height="match_parent"
			            android:layout_weight="0.05"
			            android:layout_gravity="center_vertical"            
			            android:text="@string/RefAnswer"
			            android:textAppearance="?android:attr/textAppearanceMedium"
			            android:textColor="#000000" />
			            	            
			    </LinearLayout>			    
		    </LinearLayout>
		    <LinearLayout
	            android:id="@+id/linearLayoutOtherInfo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	    		android:background="#DCDCDC"	            
	            android:orientation="horizontal" >    	            
		        <ImageView
		            android:id="@+id/imageViewMarker"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		    		android:layout_gravity="center_horizontal"     
		    		android:layout_marginLeft="20dip"           
		            android:src="@drawable/unmark_icon" />
	
		        <RatingBar
		            android:id="@+id/ratingBarHardness"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
					android:layout_marginLeft="20dip" 	            
	 				style="?android:attr/ratingBarStyleIndicator"
	 				android:numStars="3"/>
		            
		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/linearLayoutImage" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="0.8"
        android:visibility="visible"	    
    	android:background="#DCDCDC"    
	    android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:visibility="visible"
            android:src="@drawable/spinner_black_48"
    		android:layout_gravity="center_horizontal"/>	    
	    <TextView
	        android:id="@+id/textViewTip_Grap1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"	        
            android:visibility="visible"	        
	        android:text="Grap.1"/>
<!--	        
        <ImageView
            android:id="@+id/imageView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/spinner_black_48"	            
    		android:layout_gravity="center_horizontal"/>	
	    <TextView
	        android:id="@+id/textViewTip_Grap2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
	        android:text="Grap.2"/>
--> 
	</LinearLayout>  
</LinearLayout>