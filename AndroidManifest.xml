    <application android:name=".TestOnLineApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".LoginActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"	
            android:name=".examination.PaperActivity" 
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden">
         <!--    android:screenOrientation="portrait" > -->
         </activity>	
        <service android:name="com.jczhou.platform.internal.PlatformService" android:enabled="true">
            <intent-filter >
                <action android:name="com.jczhou.platform.socketservice"/>
            </intent-filter>                            
        </service>        
    </application>

</manifest>